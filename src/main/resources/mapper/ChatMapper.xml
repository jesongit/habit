<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.habit.mapper.ChatMapper">

    <resultMap id="BaseResultMap" type="com.example.habit.entity.Chat">
            <id property="uid" column="uid" jdbcType="CHAR"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="sendId" column="send_id" jdbcType="BIGINT"/>
            <result property="sendTime" column="send_time" jdbcType="TIMESTAMP"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        uid,user_id,send_id,
        send_time,content
    </sql>
</mapper>
